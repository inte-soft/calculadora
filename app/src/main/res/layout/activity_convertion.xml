<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_3"
    tools:context=".Convertion">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="   234 va"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/ingValor"
        android:layout_width="150sp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="78dp"
        android:hint="Ingresa un valor"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="19dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/lista_desplegable"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="78dp" />

    <Spinner
        android:id="@+id/sistema"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp" />

    <Button
        android:id="@+id/va"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="255dp"
        android:backgroundTint="@color/teal_700"
        android:text="va"
        android:textSize="16dp" />

    <Button
        android:id="@+id/kva"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="335dp"
        android:backgroundTint="@color/teal_700"
        android:text="Kva"
        android:textSize="16dp" />

    <Button
        android:id="@+id/kvar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="415dp"
        android:backgroundTint="@color/teal_700"
        android:text="Kvar"
        android:textSize="16dp" />

    <Button
        android:id="@+id/watio"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="495dp"
        android:backgroundTint="@color/teal_700"
        android:text="wattio"
        android:textSize="16dp" />

    <Button
        android:id="@+id/kw"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="575dp"
        android:backgroundTint="@color/teal_700"
        android:text="Kw"
        android:textSize="16dp" />

    <Button
        android:id="@+id/hp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="655dp"
        android:backgroundTint="@color/teal_700"
        android:text="hp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/volver"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="735dp"
        android:background="@drawable/regresar"
        android:backgroundTint="@color/teal_700"
        android:onClick="Regresar"
        android:textSize="16dp" />

</RelativeLayout>